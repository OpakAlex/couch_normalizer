%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ts=4 sw=4 ft=erlang et

%% == Erlang Compiler ==

%% Erlang compiler options
{erl_opts, [no_debug_info, {i, "deps/couchdb/src/couchdb"}]}.

%% What dependencies we have, dependencies can be of 3 forms, an application
%% name as an atom, eg. mochiweb, a name and a version (from the .app file), or
%% an application name, a version and the SCM details on how to fetch it (SCM
%% type, location and revision). Rebar currently supports git, hg, bzr and svn.
{rebar_deps, [
          {couchdb, "1.2.*", {git, "git://github.com/apache/couchdb.git", {branch, "1.2.x"}}}
       ]}.


%% This plugin allows you to compile Elixir files in your Erlang projects using Rebar.
{deps, [{ rebar_elixir_plugin, ".*", {git, "git://github.com/yrashk/rebar_elixir_plugin"}},
        %% This plugin depends on Elixir too, so you need to add it as a rebar dependency:
        { elixir, "0.7.0.dev", {git, "git://github.com/elixir-lang/elixir"}}]}.

%% Let rebar know about the new plugins
{plugins, [rebar_elixir_compiler, rebar_exunit] }.


%% Elixir is structured similarly to Erlang's OTP.
{lib_dirs, [
  "deps/elixir/lib/elixir/ebin",
  "deps/elixir/lib/ex_unit/ebin"
]}.


